<% @dayNames = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %>
<% @todayDayNum = DateTime.now.strftime("%u").to_i %>

<div class="reservation-target-list">
  <Table style="width:100%">
    <% for @dayIndex in 1..@target.timeWindowInDays %>
        <tr class="table-row">
        <% if @dayIndex != 1 %>
          <td class="table-week-day">
        <% else %>
          <td class="table-week-today table-week-day">
        <% end %>
          <% @di = get_adjusted_day_index(@todayDayNum, @dayIndex) %>
          <%= @dayNames[@di-1] %>
          </td>
        <%= render @reservation_slots.where("day = ?", @di) %>
        </tr>
    <% end %>
  </table>
</div>
